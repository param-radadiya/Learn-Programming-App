<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SpaceTabLayout">
        <attr name="number_of_tabs">
            <enum name="three" value="3" />
            <enum name="four" value="4" />
            <enum name="five" value="5" />
            <enum name="three_IconOnly" value="0" />
        </attr>

        <attr name="starting_position">
            <enum name="one" value="0" />
            <enum name="two" value="1" />
            <enum name="three" value="2" />
            <enum name="four" value="3" />
            <enum name="five" value="4" />
        </attr>

        <attr name="tab_color" format="color" />
        <attr name="button_color" format="color" />
        <attr name="text_color" format="color" />

        <attr name="icon_one" format="reference" />
        <attr name="icon_two" format="reference" />
        <attr name="icon_three" format="reference" />
        <attr name="icon_four" format="reference" />
        <attr name="icon_five" format="reference" />

        <attr name="text_one" format="string" />
        <attr name="text_two" format="string" />
        <attr name="text_three" format="string" />
    </declare-styleable>

    <declare-styleable name="SubtitleCollapsingToolbar">
        <attr name="subtitle" />
        <attr name="collapsedSubtitleAppearance" format="reference" />
        <attr name="expandedSubtitleAppearance" format="reference" />
    </declare-styleable>

    <declare-styleable name="FloatingNavigationView">
        <!--  If menu must be drawn below the FAB  -->
        <attr name="drawMenuBelowFab" format="boolean" />
    </declare-styleable>
    <declare-styleable name="MenuLayout">
        <attr name="fab_rotation_direction" format="integer">
            <enum name="cw" value="1"/>
            <enum name="ncw" value="2"/>
        </attr>
        <attr name="fab_Size" format="dimension"/>
        <attr name="fab_margin_right" format="dimension"/>
        <attr name="fab_margin_buttom" format="dimension"/>
        <attr name="popup_fab_size" format="dimension"/>
        <attr name="popup_fab_margin" format="dimension"/>
        <attr name="show_text" format="boolean"/>
        <attr name="show_text_bg" format="boolean"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="text_bg_color" format="color"/>
        <attr name="show_image_bg" format="boolean"/>
        <attr name="image_bg_color" format="color"/>
        <attr name="text_image_maragin" format="dimension"/>
    </declare-styleable>
</resources>